extends layout

block content
    h1 #{title}
    form(method='POST', action='/students/add')
        #form-group
            label Name:
            input.form-control(name='name', type='text')
        #form-group
            label Surname:
            input.form-control(name='surname', type='text')
        #form-group
            label Age:
            input.form-control(name='age', type='number')
        #form-group
            label Subject Of Inquiry:
            input.form-control(name='subject', type='text')
        #form-group
            label Staff who assisted visitor:
            input.form-control(name='staff', type='text')
        br
        input.btn.btn-primary(type='submit', value='Submit')